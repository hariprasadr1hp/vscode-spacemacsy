//settings.json
{
    //###############################################
    // TELEMETRY   ##################################
    //###############################################
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    //###############################################
    // GUI CONFIG   #################################
    //###############################################
    "editor.fontSize": 16,
    "editor.rulers": [
        74,
    ],
    "editor.cursorBlinking": "solid",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "zenMode.hideLineNumbers": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    //###############################################
    // TERMINAL   ###################################
    //###############################################
    "terminal.explorerKind": "external",
    "terminal.integrated.inheritEnv": false,
    //###############################################
    // CODING ENVIRONMENT   #########################
    //###############################################
    "code-runner.clearPreviousOutput": true,
    "code-runner.enableAppInsights": false,
    "code-runner.showExecutionMessage": false,
    //############### CMAKE #########################
    "cmake.configureOnOpen": false,
    //############### HTTP ##########################
    "http.proxySupport": "off",
    //############### LATEX #########################
    "latex-workshop.view.pdf.viewer": "tab",
    //################ CPP ##########################
    "C_Cpp.updateChannel": "Insiders",
    //################ SVG ##########################
    "svg.preview.mode": "svg",
    //############### PYTHON ########################
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName",
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.linting.pylintEnabled": true, 
    "python.linting.pylintArgs": [
        "--disable=C0111", //docstrings
        "--disable=C0103", //casing-style
        "--disable=C0326", //onespace after comma
    ],
    //############### JUPYTER #######################
    "notebook.output.textLineLimit": 100
    //###############################################
    // NEOVIM   #####################################
    //###############################################
    //"vscode-neovim.neovimInitVimPaths.linux": "/Users/hari/Library/Application Support/Code/User/nvim/init.vim",
    "vscode-neovim.neovimInitVimPaths.darwin": "/Users/hari/Library/Application Support/Code/User/nvim/init.vim",
    //"vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "vscode-neovim.textDecorationsAtTop": true,
    //###############################################
    // MAGIT ########################################
    //###############################################
    "[magit]": {
        "editor.lineNumbers": "on",
        "editor.minimap.enabled": false,
        "editor.renderWhitespace": "none"
    },
    "editor.semanticHighlighting.enabled": true,
    "workbench.editor.untitled.hint": "hidden",
    "security.workspace.trust.untrustedFiles": "open",
    "window.menuBarVisibility": "toggle",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "editor.renderWhitespace": "all",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "yaml.schemas": {
        "file:///Users/hari/.vscode/extensions/atlassian.atlascode-2.10.11/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "redhat.telemetry.enabled": false,
    "atlascode.jira.jqlList": [
        {
            "id": "b56d5c13-cb0a-4ea6-a746-2cb2d109a999",
            "enabled": true,
            "name": "My smart-iot Issues",
            "query": "assignee = currentUser() AND resolution = Unresolved ORDER BY lastViewed DESC",
            "siteId": "df55fa9e-e53d-414c-87e6-7752f362fa31",
            "monitor": true
        }
    ],
    "workbench.colorTheme": "GitHub Dark Default",
    "gitlens.mode.active": "zen",
    //###############################################
}
