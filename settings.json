//settings.json
{
    //###############################################
    // TELEMETRY   ##################################
    //###############################################
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    //###############################################
    // GUI CONFIG   #################################
    //###############################################
    "editor.fontSize": 16,
    "editor.rulers": [74,],
    "window.zoomLevel": 1,
    "editor.cursorBlinking": "solid",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "zenMode.hideLineNumbers": false,
    //###############################################
    // WORKBENCH ####################################
    //###############################################
    "workbench.colorTheme": "Atom One Dark",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    //###############################################
    // TERMINAL   ###################################
    //###############################################
    "terminal.explorerKind": "external",
    "terminal.integrated.inheritEnv": false,
    //###############################################
    // CODING ENVIRONMENT   #########################
    //###############################################
    "code-runner.clearPreviousOutput": true,
    "code-runner.enableAppInsights": false,
    "code-runner.showExecutionMessage": false,
    //############### CMAKE #########################
    "cmake.configureOnOpen": false,
    //############### HTTP ##########################
    "http.proxySupport": "off",
    //############### LATEX #########################
    "latex-workshop.view.pdf.viewer": "tab",
    //################ CPP ##########################
    "C_Cpp.updateChannel": "Insiders",
    //################ SVG ##########################
    "svg.preview.mode": "svg",
    //############### PYTHON ########################
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName",
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.pythonPath": "/home/hari/anaconda3/bin/python",
    "python.linting.pylintEnabled": true, 
    "python.linting.pylintArgs": [
        "--disable=C0111", //docstrings
        "--disable=C0103", //casing-style
        "--disable=C0326", //onespace after comma
    ],
    //###############################################
    // NEOVIM   #####################################
    //###############################################
    "vscode-neovim.neovimInitVimPaths.linux": "$HOME/.config/VSCodium/User/nvim/init.vim",
    //"vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimExecutablePaths.linux": "/opt/neovim/nvim.appimage",
    "vscode-neovim.textDecorationsAtTop": true,
    //###############################################
    // MAGIT ########################################
    //###############################################
    "[magit]": {
        "editor.lineNumbers": "on",
        "editor.minimap.enabled": false,
        "editor.renderWhitespace": "none"
    },
    "editor.semanticHighlighting.enabled": true,
    "workbench.editor.untitled.hint": "hidden",
    "security.workspace.trust.untrustedFiles": "open",
    "window.menuBarVisibility": "toggle",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "workbench.activityBar.visible": false,
    "editor.renderWhitespace": "all",
    //###############################################
}
