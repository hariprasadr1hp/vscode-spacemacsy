//settings.json
{
    //###############################################
    // TELEMETRY   ##################################
    //###############################################
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    //###############################################
    // GUI CONFIG   #################################
    //###############################################
    "editor.fontSize": 16,
    "editor.rulers": [
        74,
    ],
    "editor.accessibilitySupport": "off",
    "editor.cursorBlinking": "solid",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "zenMode.hideLineNumbers": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    //###############################################
    // TERMINAL   ###################################
    //###############################################
    "terminal.explorerKind": "external",
    "terminal.integrated.inheritEnv": false,
    //###############################################
    // CODING ENVIRONMENT   #########################
    //###############################################
    "code-runner.clearPreviousOutput": true,
    "code-runner.enableAppInsights": false,
    "code-runner.showExecutionMessage": false,
    //############### CMAKE #########################
    //############### HTTP ##########################
    "http.proxySupport": "off",
    //############### LATEX #########################
    "latex-workshop.view.pdf.viewer": "tab",
    //################ CPP ##########################
    //################ SVG ##########################
    "svg.preview.mode": "svg",
    //############### PYTHON ########################
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName",
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.pylint"
    },
    //############### JUPYTER #######################
    "notebook.output.textLineLimit": 100
    //###############################################
    // NEOVIM   #####################################
    //###############################################
    //"vscode-neovim.neovimInitVimPaths.linux": "/Users/hari/Library/Application Support/Code/User/nvim/init.vim",
    "vscode-neovim.neovimInitVimPaths.darwin": "/Users/hari/Library/Application Support/Code/User/nvim/init.vim",
    //"vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.logOutputToConsole": true,
    //###############################################
    // MAGIT ########################################
    //###############################################
    "[magit]": {
        "editor.lineNumbers": "on",
        "editor.minimap.enabled": false,
        "editor.renderWhitespace": "none"
    },
    "editor.semanticHighlighting.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "editor.renderWhitespace": "all",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "yaml.schemas": {
        "file:///Users/hari/.vscode/extensions/atlassian.atlascode-2.10.11/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "redhat.telemetry.enabled": false,
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "window.commandCenter": true,
    "vs-kubernetes": {
        "vscode-kubernetes.minikube-path.mac": "/Users/hari/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
        "vscode-kubernetes.helm-path.mac": "/Users/hari/.vs-kubernetes/tools/helm/darwin-arm64/helm"
    },
    "[json]": {
        // "editor.defaultFormatter": "denoland.vscode-deno",
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    //###############################################
}
