{
	"jtox": {
		"prefix": "jtox",
		"body": [
			"[tox]",
			"minversion = 3.8.0",
			"envlist = py36, py37, py38, py39, flake8, mypy",
			"isolated_build = true",
			"",
			"[gh-actions]",
			"python =",
			"\t3.6: py36, mypy, flake8",
			"\t3.7: py37",
			"\t3.8: py38",
			"\t3.9: py39",
			"",
			"[testenv]",
			"setenv =",
			"\tPYTHONPATH = {toxinidir}",
			"deps =",
			"\t-r{toxinidir}/requirements_dev.txt",
			"commands =",
			"\tpytest --basetemp={envtmpdir}",
			"",
			"[testenv:flake8]",
			"basepython = python3.6",
			"deps = flake8",
			"commands = flake8 src tests",
			"",
			"[testenv:mypy]",
			"basepython = python3.6",
			"deps =",
			"\t-r{toxinidir}/requirements_dev.txt",
			"commands = mypy src",
		],
		"description": "hp snippet for tox.ini",
	},
}